{
  "compilerOptions": {
    "types": ["mocha", "chai", "node"],
    "lib": ["dom", "es2019"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "esModuleInterop": true,

    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "composite": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
}
